{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowROSAPodAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "${rosa_pod_iam_role_arn}"
      },
      "Action": [
        "sqs:SendMessage",
        "sqs:GetQueueAttributes",
        "sqs:GetQueueUrl"
      ],
      "Resource": "${queue_arn}"
    },
    {
      "Sid": "AllowLambdaAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "${lambda_execution_role_arn}"
      },
      "Action": [
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueAttributes"
      ],
      "Resource": "${queue_arn}"
    }
  ]
}
