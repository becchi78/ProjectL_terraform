# -----------------------------------------------------------------------------
# localstack環境 変数値 (サンプル)
# このファイルをterraform.tfvarsにコピーして使用してください
# -----------------------------------------------------------------------------

# 基本情報
environment = "localstack"
region      = "ap-northeast-1"

# Lambda関数定義
lambda_functions = {
  processor1 = {
    runtime     = "nodejs20.x"
    handler     = "index.handler"
    source_dir  = "lambda-functions/processor1"
    memory_size = 128
    timeout     = 30
    description = "SQS processor 1 (Node.js)"
  }
  processor2 = {
    runtime     = "python3.12"
    handler     = "lambda_function.lambda_handler"
    source_dir  = "lambda-functions/processor2"
    memory_size = 256
    timeout     = 60
    description = "SQS processor 2 (Python)"
  }
}

# SQS設定
sqs_message_retention_seconds  = 345600 # 4 days
sqs_visibility_timeout_seconds = 30
sqs_max_receive_count          = 3

# SQS Event Source Mapping設定
sqs_batch_size = 10
